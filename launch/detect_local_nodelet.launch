<launch>
    <node pkg="nodelet" type="nodelet" name="nodelet_manager" args="manager" output="screen">
        <param name="num_worker_threads" value="2"/>
    </node>

    <node pkg="nodelet" type="nodelet" name="front_camera" args="load cv_camera/CvCameraNodelet nodelet_manager" clear_params="true">
        <!-- ><param name="frame_id" value="main_camera_optical"/> -->
        <param name="camera_info_url" value="file://$(find red_dead_detection)/camera_info/fisheye_cam_640.yaml"/>
        <param name="rate" value="30"/> <!-- poll rate -->
        <param name="cv_cap_prop_fps" value="30"/> <!-- camera FPS -->
        <param name="capture_delay" value="0.02"/> <!-- approximate delay on frame retrieving -->
        <param name="rescale_camera_info" value="true"/> <!-- automatically rescale camera calibration info -->
        <!-- camera resolution, NOTE: camera_info file should match it -->
        <param name="image_width" value="640"/>
        <param name="image_height" value="480"/>
        <param name="device_id" value="0"/>
    </node>

    <node pkg="nodelet" type="nodelet" name="red_dead_detection" args="load red_dead_detection/red_dead_detection_nodelet nodelet_manager" output="screen">
        <remap from="image_raw" to="front_camera/image_raw"/>
        <remap from="camera_info" to="front_camera/camera_info"/>
    </node>

</launch>